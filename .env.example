# SquareTrade Chat Agent Configuration

# LLM Provider (ollama, openai, or azure)
LLM_PROVIDER=ollama

# Ollama Settings (used when LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# OpenAI Settings (used when LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Azure OpenAI Settings (used when LLM_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_MODEL=gpt-35-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Search Configuration
SEARCH_API_KEY=your_search_api_key_here

# Artifactory Configuration
ARTIFACTORY_USER=your_artifactory_username_here
ARTIFACTORY_PASSWORD=your_artifactory_password_here

# Logging
LOG_LEVEL=INFO

# RAG Settings
CHUNK_SIZE=500
TOP_K_RESULTS=3

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=True

